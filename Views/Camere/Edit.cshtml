@model AplicatieCamine.Models.Camere

@{
    ViewData["Title"] = "Edit";
}
<link rel="stylesheet" href="~/css/styleTable.css">

<style>
    .create_button {
        border: none;
        color: white;
        background-color: #008CBA;
        padding: 5px 15px;
        text-align: center;
        text-decoration: none;
        font-size: 16px;
        cursor: pointer;
        transition-duration: 0.6s;
        margin: 5px 0 5px 10px;
    }
</style>
<div class="container-fluid d-flex justify-content-center mb-50">
    <div class="cardCreate">
        <div class="card-header header-elements-inline ml-50">
            <h5 style="font-family:Garamond,serif; font-size: 30px">Editează Cameră</h5>
        </div>
        <div class="container-fluid">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdCamera" />
                <div class="form-group">
                    <label asp-for="IdCamin" class="control-label"></label>
                    <select asp-for="IdCamin" class="form-control" asp-items="ViewBag.IdCamin"></select>
                    <span asp-validation-for="IdCamin" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LimitaNrStudenti" class="control-label"></label>
                    <input asp-for="LimitaNrStudenti" class="form-control" />
                    <span asp-validation-for="LimitaNrStudenti" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NrStudentiCazati" class="control-label"></label>
                    <input asp-for="NrStudentiCazati" class="form-control" />
                    <span asp-validation-for="NrStudentiCazati" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descriere" class="control-label"></label>
                    <input asp-for="Descriere" class="form-control" />
                    <span asp-validation-for="Descriere" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NrCamera" class="control-label"></label>
                    <input asp-for="NrCamera" class="form-control" />
                    <span asp-validation-for="NrCamera" class="text-danger"></span>
                </div>
                <div class="justify-content-center">
                    <input type="submit" value="Salvează" class="create_button" />
                    <a class="create_button" asp-action="Index">Înapoi</a>
                </div>
            </form>
        </div>
    </div>
</div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
