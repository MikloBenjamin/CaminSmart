@model AplicatieCamine.Models.Administratori

@{
    ViewData["Title"] = "Create";
}
<style>
    .create_button {
        border: none;
        color: white;
        background-color: #008CBA;
        padding: 5px 15px;
        text-align: center;
        text-decoration: none;
        font-size: 16px;
        cursor: pointer;
        transition-duration: 0.6s;
        margin: 5px 0 5px 10px;
    }
</style>
<link rel="stylesheet" href="~/css/styleTable.css">
<div class="container-fluid d-flex justify-content-center mb-50">
    <div class="cardCreate">
        <div class="card-header header-elements-inline ml-50">
            <h5 style="font-family:Garamond,serif; font-size: 30px">Creare Administrator</h5>
        </div>

        <div class="container-fluid">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="IdAdmin" class="control-label">ID Admin:</label>
                    <input asp-for="IdAdmin" class="form-control" />
                    <span asp-validation-for="IdAdmin" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdCamin" class="control-label">ID Cămin:</label>
                    <select asp-for="IdCamin" class="form-control" asp-items="ViewBag.IdCamin"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Nume" class="control-label">Nume:</label>
                    <input asp-for="Nume" class="form-control" />
                    <span asp-validation-for="Nume" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Adresa" class="control-label">Adresă:</label>
                    <input asp-for="Adresa" class="form-control" />
                    <span asp-validation-for="Adresa" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NrTelefon" class="control-label">Nr. de telefon:</label>
                    <input asp-for="NrTelefon" class="form-control" />
                    <span asp-validation-for="NrTelefon" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label">E-mail:</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mx-auto mb-2">
                    <input type="submit" value="Crează" class="create_button" />
                    <a asp-action="Index" class="create_button">Înapoi</a>
                </div>
            </form>
        </div>
    </div>
</div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
