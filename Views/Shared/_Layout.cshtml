@{ 
    string usr = User.Identity.Name.Split('@')[0];
}

<!DOCTYPE html>
<html lang="en">
<head>
	<link class="icon" rel="icon" href="@Url.Content("/Images/icons/uvt.ico")"  type="image/x-icon" />
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - AplicatieCamine</title>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" />
	<link rel="stylesheet" href="~/css/selfDesign.css" />
	<link rel="stylesheet" href="@Url.Content("/css/styleCamine.css")" type="text/css" />
	@RenderSection("Styles", false)
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom shadow-lg mb-3 rounded">
			<div class="container">
				<a asp-area="" asp-controller="Home" asp-action="Index">
					<img src="@Url.Content("/Images/icons/CamineUVT.jpg")" width="200" height="110" />
				</a>
				<button id="student">STUDENT</button>
				<button id="admin">ADMIN</button>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
					<partial name="_LoginPartial" />
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<button class="button3"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a></button>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</header>
	<div id="page">
		<main role="main">
			@RenderBody()
		</main>
	</div>
	<footer>
		<div><img class="logouvt" src="@Url.Content("/Images/icons/uvt.png")" /></div>
		<div>
			<a href="https://www.uvt.ro/ro/" target="_blank">www.uvt.ro</a>
			<div><p style="font-family:Garamond, serif; font-size: 32px">Smart Cămine UVT</p></div>
		</div>
		<div class="footer-icons">
			<a href="https://www.facebook.com/uvtromania"><i class="fa fa-facebook"></i></a>
			<a href="https://twitter.com/uvtromania"><i class="fa fa-twitter"></i></a>
			<a href="https://www.instagram.com/uvt_romania/"><i class="fa fa-instagram"></i></a>
			<a href="https://www.linkedin.com/school/west-university-of-timisoara/"><i class="fa fa-linkedin"></i></a>
			<a href="https://www.youtube.com/channel/UC9rKWeN__ZbmqP3s-H6VcLA"><i class="fa fa-youtube"></i></a>
		</div>
	</footer>
	@RenderSection("Footer", false)

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script>
		$("#student").hide();
		$("#admin").hide();
	</script>
	@RenderSection("Scripts", required: false)
</body>
</html>
