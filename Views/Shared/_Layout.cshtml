<!DOCTYPE html>
<html lang="en">
<head>
    <link class="icon" rel="icon" href="../Images/icons/uvt.ico" type="image/x-icon" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AplicatieCamine</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link href="http://fonts.googleapis.com/css?family=Cookie" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/footer-distributed-with-contact-form.css">
    <link rel="stylesheet" href="@Url.Content("/css/styleCamine.css")" type="text/css" />
    @RenderSection("Styles", false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom shadow-lg mb-3 rounded fixed-top">
            <div class="container">
                <a asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="../Images/icons/CamineUVT.jpg" width="200" height="110" />
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <button class="button3"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a></button>
                        </li>
@*                        <li class="nav-item">
                            <button class="button3"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Contact</a></button>
                        </li>*@
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container" style="margin-top: 20%; margin-bottom: 20%;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-distributed">

        <div class="footer-left">

            <h3><img class="logouvt" src="../Images/icons/uvt.png" /></h3>

            <p class="footer-links">
                <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
@*                ·
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Contact</a>*@
            </p>

            <p class="footer-company-name">Smart Camine UVT</p>

            <div class="footer-icons">

                <a href="https://www.facebook.com/uvtromania"><i class="fa fa-facebook"></i></a>
                <a href="https://twitter.com/uvtromania"><i class="fa fa-twitter"></i></a>
                <a href="https://www.instagram.com/uvt_romania/"><i class="fa fa-instagram"></i></a>
                <a href="https://www.linkedin.com/school/west-university-of-timisoara/"><i class="fa fa-linkedin"></i></a>
                <a href="https://www.youtube.com/channel/UC9rKWeN__ZbmqP3s-H6VcLA"><i class="fa fa-youtube"></i></a>

            </div>

        </div>

        <div class="footer-right">

            <p>Contact Us</p>

            <form action="#" method="post">

                <input type="text" name="email" placeholder="Email" />
                <textarea name="message" placeholder="Message"></textarea>
                <button>Send</button>

            </form>

        </div>

    </footer>
   @* <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - AplicatieCamine - <a asp-area="" asp-controller="Home" asp-action="Privacy">Contact</a>
            <img class="logouvt" src="../Images/icons/uvt.png" />
        </div>
    </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
<style>
    .button3 {
        border: none;
        color: black;
        background-color: white;
        padding: 15px 25px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 18px;
        margin: 4px 2px;
        cursor: pointer;
        transition-duration: 0.4s;
    }

    .button3:hover {
        background-color: #e7e7e7;
    }
    .icon{
        width: 100px;
        height:100px;
    }
    .logouvt {
        position: relative;
        left: 0px;
        bottom: 4px;
        width: 200px;
        height: 60px;
    }
</style>