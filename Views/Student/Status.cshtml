@model AplicatieCamine.Models.Student

@{ ViewData["Title"] = "Status";
    var status = ((Model.StatusCazare == 1) ? "Cazat" : "Nu este cazat");
    }
<style>
    main {
        flex-direction: column;
        padding: 2em;
    }
</style>
@if (Model != null)
{
    <style>
        .create_button {
            border: none;
            color: white;
            background-color: #008CBA;
            padding: 5px 15px;
            text-align: center;
            text-decoration: none;
            font-size: 16px;
            cursor: pointer;
            transition-duration: 0.6s;
            margin: 5px 0 5px 10px;
        }
    </style>
    <link rel="stylesheet" href="~/css/styleTable.css">

    <div class="container-fluid d-flex justify-content-center mb-auto">
        <div class="cardCreate">
            <div class="card-header header-elements-inline ml-50 justify-content-center">
                <h5 style="font-family:Garamond,serif; font-size: 40px"><b>Detalii Student</b></h5>
            </div>
            <div class="container-fluid justify-content-center">
                <div class="col-sm-15">
                    <p style="font-family:Garamond,serif; font-size: 18px; text-align:center">
                        <b>@Html.DisplayNameFor(model => model.Nume):</b>
                        @Html.DisplayFor(model => model.Nume)
                    </p>
                </div>
                <div class="col-sm-15">
                    <p style="font-family:Garamond,serif; font-size: 18px;text-align:center">
                        <b>@Html.DisplayNameFor(model => model.Prenume):</b>
                        @Html.DisplayFor(model => model.Prenume)
                    </p>
                </div>
                <div class="col-sm-15">
                    <p style="font-family:Garamond,serif; font-size: 18px; text-align:center">
                        <b>@Html.DisplayNameFor(model => model.Facultate):</b>
                        @Html.DisplayFor(model => model.Facultate)
                    </p>
                </div>
                <div class="col-sm-15">
                    <p style="font-family:Garamond,serif; font-size: 18px;text-align:center">
                        <b>@Html.DisplayNameFor(model => model.Varsta):</b>
                        @Html.DisplayFor(model => model.Varsta)
                    </p>
                </div>
                <div class="col-sm-15">
                    <p style="font-family:Garamond,serif; font-size: 18px; text-align:center">
                        <b>@Html.DisplayNameFor(model => model.Adresa): </b>
                        @Html.DisplayFor(model => model.Adresa)
                    </p>
                </div>
                <div class="col-sm-15">
                    <p style="font-family:Garamond,serif; font-size: 18px; text-align:center">
                        <b>@Html.DisplayNameFor(model => model.Email): </b>
                        @Html.DisplayFor(model => model.Email)
                    </p>
                </div>
                <div class="col-sm-15">
                    <p style="font-family:Garamond,serif; font-size: 18px; text-align:center">
                        <b>@Html.DisplayNameFor(model => model.An): </b>
                        @Html.DisplayFor(model => model.An)
                    </p>
                </div>
                <div class="col-sm-15">
                    <p style="font-family:Garamond,serif; font-size: 18px; text-align:center">
                        <b>Status: </b>
                        @status
                    </p>
                </div>
                <div class="col-sm-15">
                    <p style="font-family:Garamond,serif; font-size: 18px; text-align:center">
                        <b>@Html.DisplayNameFor(model => model.DataCazare): </b>
                        @Html.DisplayFor(model => model.DataCazare)
                    </p>
                </div>
                <div class="col-sm-15">
                    <p style="font-family:Garamond,serif; font-size: 18px; text-align:center">
                        <b>@Html.DisplayNameFor(model => model.DataDecazare): </b>
                        @Html.DisplayFor(model => model.DataDecazare)
                    </p>
                </div>
                <div class="col-sm-15">
                    <p style="font-family:Garamond,serif; font-size: 18px; text-align:center">
                        <b>Id Camera: </b>
                        @Html.DisplayFor(model => model.IdCamera)
                    </p>
                </div>
            </div>
            <div class="mx-auto mb-2">
                <a asp-action="Home" class="create_button">Înapoi</a>
            </div>
        </div>
    </div>


}
else
{
    <div align="center">
        <h2>Nu esti cazat!</h2>
    </div>
}
<div>
    <a asp-action="Home">Back to Home</a>
</div>
