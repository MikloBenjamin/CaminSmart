@model AplicatieCamine.Models.Tichet

@{
    ViewData["Title"] = "Edit";
    bool status = Model.StatusTichet;
    bool tip = Model.TipTichet;
}

<link rel="stylesheet" href="~/css/styleTable.css">

<style>
    .create_button {
        border: none;
        color: white;
        background-color: #008CBA;
        padding: 5px 15px;
        text-align: center;
        text-decoration: none;
        font-size: 16px;
        cursor: pointer;
        transition-duration: 0.6s;
        margin: 5px 0 5px 10px;
    }
</style>
<div class="container-fluid d-flex justify-content-center mb-50">
    <div class="cardCreate">
        <div class="card-header header-elements-inline ml-50">
            <h5 style="font-family:Garamond,serif; font-size: 30px">Editează Tichet</h5>
        </div>
        <div class="container-fluid">
			<form asp-action="Edit">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<input type="hidden" asp-for="IdTichet" name="id" />
				<div class="form-group" disabled>
					<label asp-for="IdStudent" class="control-label">ID Student:</label>
					<select asp-for="IdStudent" class="form-control" asp-items="ViewBag.IdStudent"></select>
					<span asp-validation-for="IdStudent" class="text-danger"></span>
				</div>
				<div class="form-group" disabled>
					<label asp-for="DataEmitere" class="control-label">Data Emiterii:</label>
					<input asp-for="DataEmitere" class="form-control" />
					<span asp-validation-for="DataEmitere" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="DateRezolvare" class="control-label">Data Rezolvare:</label>
					<input asp-for="DateRezolvare" class="form-control" />
					<span asp-validation-for="DateRezolvare" class="text-danger"></span>
				</div>
				<div class="form-group form-check">
					<label class="form-check-label">
						<input class="form-check-input" asp-for="StatusTichet" /> Rezolvat?
					</label>
				</div>
				<div class="form-group">
					<label asp-for="Detalii" class="control-label">Detalii:</label>
					<input asp-for="Detalii" class="form-control" />
					<span asp-validation-for="Detalii" class="text-danger"></span>
				</div>
				<div class="form-group form-check">
					<label class="form-check-label">
						<input class="form-check-input" asp-for="TipTichet" /> Important?
					</label>
				</div>
				<div class="form-group form-check">
					<label class="form-check-label">
						Feedback:
						<input class="form-check-input" asp-for="Feedback" /> Feedback:
					</label>
				</div>
				<div class="col-sm-15">
					<a href="@Url.Content("~/TichetImages/" + Model.FileName)"><img src="@Url.Content("~/TichetImages/" + Model.FileName)" width="60" height="60" /></a>
				</div>
				<div class="justify-content-center">
					<input type="submit" value="Salvează" class="create_button" />
					<a class="create_button" asp-action="Index">Înapoi</a>
				</div>
			</form>
        </div>
    </div>
</div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
