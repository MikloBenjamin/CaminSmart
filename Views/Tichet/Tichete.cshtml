@model dynamic

@{ 
	ViewData["Title"] = "Tichete";
	var tichete = Model.Tichet;
	var nr_camera = Model.Camera;
}
<style>
	main {
		flex-direction: column;
	}
	.create_button {
		border: none;
		color: white;
		background-color: #008CBA;
		padding: 5px 15px;
		text-align: center;
		text-decoration: none;
		font-size: 16px;
		cursor: pointer;
		transition-duration: 0.6s;
		margin: 5px 0 5px 10px;
	}
</style>

<form asp-action = "CreateTichetST" method="get">
	<input type="submit" value="Creeaza un tichet nou" class="create_button" name="Student_Create"/>
</form>
<table class="table">
	<thead>
		<tr>
			<th>
				IdTichet
			</th>
			<th>
				DataEmitere
			</th>
			<th>
				DateRezolvare
			</th>
			<th>
				StatusTichet
			</th>
			<th>
				Detalii
			</th>
			<th>
				NrCamera
			</th>
			<th>
				Importanta
			</th>
			<th>
				Feedback
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
	@if(Enumerable.Count(tichete) == 0 || nr_camera == -1) { 
		<tr>
			<td>
				You have no active tichets!
			</td>
		</tr>
	} else { 	
		@foreach (var item in tichete)
		{
			string importanta = (item.TipTichet ? "DA" : "NU");
			string rezolvat = (item.StatusTichet ? "Rezolvat" : "Nerezolvat");
	<tr>
		<td>
			@item.IdTichet
		</td>
		<td>
			@item.DataEmitere
		</td>
		<td>
			@item.DateRezolvare
		</td>
		<td>
			@rezolvat
		</td>
		<td>
			@item.Detalii
		</td>
		<td>
			@nr_camera
		</td>
		<td>
			@importanta
		</td>
		<td>
			@item.Feedback
		</td>
		<td>
			<a asp-action="Details" asp-route-id="@item.IdTichet">Details</a>
		</td>
	</tr>
		}
	}
	</tbody>
</table>
