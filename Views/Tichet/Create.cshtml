@model AplicatieCamine.Models.Tichet

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/css/styleTable.css">


<div class="container-fluid d-flex justify-content-center mb-50">
    <div class="cardCreate">
        <div class="card-header header-elements-inline ml-50">
            <h5 style="font-family:Garamond,serif; font-size: 30px">Creare Tichet</h5>
        </div>
            <div class="container-fluid">
				<form asp-action="Create">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<div class="form-group">
						<label asp-for="IdTichet" class="control-label">ID Tichet:</label>
						<input asp-for="IdTichet" class="form-control" />
						<span asp-validation-for="IdTichet" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="IdStudent" class="control-label">ID Student:</label>
						<select asp-for="IdStudent" class="form-control" asp-items="ViewBag.IdStudent"></select>
					</div>
					<div class="form-group">
						<label asp-for="IdCamera" class="control-label">ID Cameră:</label>
						<input asp-for="IdCamera" class="form-control" />
						<span asp-validation-for="IdCamera" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="DataEmitere" class="control-label">Dată Emitere:</label>
						<input asp-for="DataEmitere" class="form-control" />
						<span asp-validation-for="DataEmitere" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="DateRezolvare" class="control-label">Dată Rezolvare:</label>
						<input asp-for="DateRezolvare" class="form-control" />
						<span asp-validation-for="DateRezolvare" class="text-danger"></span>
					</div>
					<div class="form-group form-check">
						<label class="form-check-label">
							<input class="form-check-input" asp-for="StatusTichet" /> Rezolvat?
						</label>
					</div>
					<div class="form-group">
						<label asp-for="Detalii" class="control-label">Detalii:</label>
						<input asp-for="Detalii" class="form-control" autocomplete="off" />
						<span asp-validation-for="Detalii" class="text-danger"></span>
					</div>
					<div class="form-group form-check">
						<label class="form-check-label">
							<input class="form-check-input" asp-for="TipTichet" />  Important?
						</label>
					</div>
					<div class="form-group">
						<label asp-for="Feedback" class="control-label">Feedback:</label>
						<input asp-for="Feedback" class="form-control" />
						<span asp-validation-for="Feedback" class="text-danger"></span>
					</div>
					<div class="form-group form-check">
						<label class="form-check-label">
							Trimite o poză despre problemă: <input type="file" name="file" />
						</label>
					</div>
					<div class="mx-auto mb-1">
						<input type="submit" value="Crează" class="create_button" />
						<a asp-action="Index" class="create_button">Înapoi</a>
					</div>
				</form>
            </div>
    </div>
</div>

<style>
    .create_button {
        border: none;
        color: white;
        background-color: #008CBA;
        padding: 5px 15px;
        text-align: center;
        text-decoration: none;
        font-size: 16px;
        cursor: pointer;
        transition-duration: 0.6s;
        margin: 5px 0 5px 10px;
    }
}
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
